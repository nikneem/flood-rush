<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="HexMaster.FloodRush.App.Controls.PipeControl"
        BackgroundColor="{StaticResource Secondary}"
        StrokeThickness="0"
        Padding="0"
        WidthRequest="40"
        HeightRequest="40">
    
    <Grid>
        <!-- Pipe Image -->
        <Image x:Name="PipeImage"
               Aspect="AspectFit"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />
        
        <!-- Flow indicator overlay (optional, can be animated later) -->
        <Image x:Name="FlowIndicator"
               Aspect="AspectFit"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               IsVisible="False"
               Opacity="0.7" />
    </Grid>
    
</Border>
