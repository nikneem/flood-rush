<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="HexMaster.FloodRush.App.Controls.NextTilesQueueControl"
        BackgroundColor="{StaticResource BlackTransparent}"
        StrokeThickness="2"
        Stroke="{StaticResource SteelBlueGradient}"
        Padding="10,5">
    
    <ScrollView x:Name="ScrollContainer"
                Orientation="Horizontal"
                HorizontalScrollBarVisibility="Never"
                VerticalScrollBarVisibility="Never">
        <HorizontalStackLayout x:Name="TilesContainer"
                              Spacing="8"
                              VerticalOptions="Center" />
    </ScrollView>
    
</Border>
